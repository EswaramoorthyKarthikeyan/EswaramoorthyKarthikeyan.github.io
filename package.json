{
	"name": "personal-portfolio",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm run lint:css && vite",
		"build": "vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint:css": "stylelint './src/scss/**/*.scss' --fix",
