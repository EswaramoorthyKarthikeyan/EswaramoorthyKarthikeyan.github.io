		"sass:build": "sass ./src/scss/style.scss:style.css --no-source-map"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.6.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"sass": "^1.89.2",
		"stylelint": "^16.20.0",
		"stylelint-config-clean-order": "^7.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-plugin-defensive-css": "^1.0.4",
		"stylelint-scss": "^6.12.1",
		"stylelint-use-logical": "^2.1.2",
		"vite": "^7.0.0"
	},
	"description": "Personal portfolio website for Eswaramoorthy Karthikeyan.",
	"author": "Eswaramoorthy Karthikeyan"
}
